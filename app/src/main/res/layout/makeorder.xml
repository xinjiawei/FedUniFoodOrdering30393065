                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_4"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_5"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox6"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_6"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox7"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_7"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_8"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox9"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_9"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox10"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/extra_10"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:onClick="onClickNext"
        android:text="NEXT">

    </Button>
    <TextView
        android:id="@+id/text30393065"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
